{
    "compilerOptions": {
        "checkJs": true,
        "lib": ["ES2023", "DOM"],
        "module": "commonjs",
        "strict": true,
        "outDir": "./dist",
        "useUnknownInCatchVariables": false,
        "jsx": "react",
        "jsxFactory": "jsxInTTPG",
        "jsxFragmentFactory": "jsxFrag",
        "rootDir": "./src",
        "skipLibCheck": true,
        "declaration": true,
        "moduleResolution": "node16"
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
